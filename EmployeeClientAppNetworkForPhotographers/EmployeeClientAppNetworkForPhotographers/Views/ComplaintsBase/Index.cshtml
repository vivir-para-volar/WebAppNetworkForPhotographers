@model IEnumerable<EmployeeClientAppNetworkForPhotographers.Models.Data.ComplaintBase>

<div class="container pt-4 pb-5">

    <div class="containerParentFlexCenter">
        <h3>Базовые жалобы</h3>
    </div>

    <div class="mt-4 pb-1">
        <a class="btn btn-outline-success" asp-controller="ComplaintsBase" asp-action="Create">Добавить</a>
    </div>

    <table id="tableId" class="table mt-4">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th>@(i)</th>
                    <td>@Html.DisplayFor(model => item.Name)</td>
                    <td>
                        <a class="btn btn-outline-dark" asp-controller="ComplaintsBase" asp-action="Update" asp-route-id=@(item.Id)>Изменить</a>
                        <a class="btn btn-outline-danger ms-2" asp-controller="ComplaintsBase" asp-action="Delete" asp-route-id=@(item.Id)>Удалить</a>
                    </td>
                </tr>

                i++;
            }
        </tbody>
    </table>

</div>


<script src="~/lib/tablesort.min.js" asp-append-version="true"></script>
<script src="~/lib/tablesort.number.js" asp-append-version="true"></script>
<script>
    new Tablesort(document.getElementById('tableId'));
</script>

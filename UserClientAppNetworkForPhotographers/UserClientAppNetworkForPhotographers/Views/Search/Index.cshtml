<div class="container p-3 mt-5 pt-4">

    <div class="containerParentFlexCenter">
        <h3>Поиск</h3>
    </div>

    <div class="containerParentFlexCenter mt-4">
        <div class="containerCenter">

            <div class="containerParentFlex">
                <input id="searchData" type="text" class="form-control" placeholder="Введите запрос..." minlength="2" maxlength="512">

                <div class="divFlexCenter">
                    <button class="btnImg" onclick="startSearch()">
                        <img class="contentImg" src="~/image/search.png">
                    </button>
                </div>
            </div>

        </div>
    </div>

    <div class="containerParentFlexCenter mt-4">
        <div class="containerCenter">

            <ul class="nav nav-tabs" id="searchTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="photographersTab" data-bs-toggle="tab" data-bs-target="#photographers"
                            type="button" role="tab" aria-controls="main" aria-selected="false">
                        Фотографы
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="postsTab" data-bs-toggle="tab" data-bs-target="#posts"
                            type="button" role="tab" aria-controls="main" aria-selected="false">
                        Посты
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="blogsTab" data-bs-toggle="tab" data-bs-target="#blogs"
                            type="button" role="tab" aria-controls="other" aria-selected="false">
                        Блоги
                    </button>
                </li>
            </ul>

        </div>
    </div>

    <div class="containerParentFlexCenter mt-4">
        <div class="containerCenter">
            <div class="tab-content" id="searchTabContent">

                <div class="tab-pane fade show active" id="photographers" role="tabpanel" aria-labelledby="photographersTab">
                    <div id="emptySearchPhotographers" class="ps-2" style="display:none">
                        <p>Фотографы не найдены</p>
                    </div>

                    <div id="listSearchPhotographers"></div>

                    <div class="containerParentFlexCenter mt-4">
                        <button id="btnMoreSearchPhotographers" type="button" class="btn btn-outline-dark mb-4"
                                onclick="moreSearchPhotographers()" style="display:none">
                            Показать ещё
                        </button>
                    </div>
                </div>

                <div class="tab-pane fade" id="posts" role="tabpanel" aria-labelledby="postsTab">
                    <div id="emptySearchPosts" class="ps-2" style="display:none">
                        <p>Посты не найдены</p>
                    </div>

                    <div id="listSearchPosts"></div>

                    <div class="containerParentFlexCenter">
                        <button id="btnMoreSearchPosts" type="button" class="btn btn-outline-dark mb-4"
                                onclick="moreSearchPosts()" style="display:none">
                            Показать ещё
                        </button>
                    </div>
                </div>

                <div class="tab-pane fade" id="blogs" role="tabpanel" aria-labelledby="blogsTab">
                    <div id="emptySearchBlogs" class="ps-2" style="display:none">
                        <p>Блоги не найдены</p>
                    </div>

                    <div id="listSearchBlogs"></div>

                    <div class="containerParentFlexCenter">
                        <button id="btnMoreSearchBlogs" type="button" class="btn btn-outline-dark mb-4"
                                onclick="moreSearchBlogs()" style="display:none">
                            Показать ещё
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@(await Html.PartialAsync("~/Views/ContentActions/PanelModals.cshtml"))

<script src="~/js/contentPanel.js" asp-append-version="true"></script>
<script src="~/js/contentsList.js" asp-append-version="true"></script>
<script src="~/js/photographersList.js" asp-append-version="true"></script>
<script src="~/js/search.js" asp-append-version="true"></script>
